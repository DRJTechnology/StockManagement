@page "/sales-report"

<h3>Sales Report</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    foreach (var venue in GroupedSalesReport)
    {
        <h4>@venue.Key</h4>
        foreach (var productType in venue.Value)
        {
            <h5>@productType.Key</h5>
            <ul>
                @foreach (var item in productType.Value)
                {
                    <li>@item.ProductName: @item.TotalSales sales</li>
                }
            </ul>
        }
    }
}
