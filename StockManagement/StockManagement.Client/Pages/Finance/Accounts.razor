@using StockManagement.Client.Components.Finance
@page "/accounts"
@rendermode InteractiveWebAssembly
@inherits AccountsBase

<h3>Accounts</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <AccountEditModal Show="ShowForm"
                      EditAccount="EditAccount"
                      AccountTypes="AccountTypes"
                      OnCancel="CancelEdit"
                      OnValidSubmit="HandleValidSubmit" />

    <div class="mb-2 d-flex justify-content-between align-items-center">
        <button class="btn btn-primary" @onclick="ShowAddForm">Add Account</button>
        <div class="form-check form-switch">
            <InputCheckbox @bind-Value="IncludeInactive" class="form-check-input" id="includeInactiveSwitch" />
            <label class="form-check-label" for="includeInactiveSwitch">
                Include Inactive
            </label>
        </div>
    </div>

    <div class="d-none d-md-block">
        <div class="px-3 py-2">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-md-4 col-lg-3">
                            <div class="fw-bold">
                                Account
                            </div>
                        </div>
                        <div class="col-md-5 col-lg-4">
                            <div class="fw-bold">
                                Type
                            </div>
                        </div>
                        @if (IncludeInactive)
                        {
                            <div class="col-md-3 col-lg-5">
                                <div class="fw-bold">
                                    Active
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    int rowIndex = 0;
    @foreach (var account in Accounts)
    {
        var rowClass = rowIndex % 2 == 0 ? "alt-row" : "";
        <div class="card mb-3 mb-lg-0 @rowClass">
            <div class="card-body py-2">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-4 d-md-none">
                                Account:
                            </div>
                            <div class="col-8 col-md-4 col-lg-3">
                                @account.Name
                            </div>
                            <div class="col-4 d-md-none">
                                Type:
                            </div>
                            <div class="col-8 col-md-5 col-lg-4">
                                @account.Type
                            </div>
                            @if (IncludeInactive)
                            {
                            <div class="col-4 d-md-none">
                                Active:
                            </div>
                            <div class="col-8 col-md-3 col-lg-2">
                                @(account.Active ? "Yes" : "No")
                            </div>
                            }
                            <div class="col-12 col-lg-3">
                                <button class="btn btn-sm btn-warning" @onclick="() => Edit(account)">Edit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        rowIndex++;
    }
}
