@page "/profit-and-loss"
@layout MainLayoutClient
@using StockManagement.Client.Components.Finance
@using StockManagement.Client.Shared
@inherits ProfitAndLossReportBase
@rendermode InteractiveWebAssembly
<PageTitle>Profit and Loss</PageTitle>

<h3>Profit and Loss</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <div class="d-none d-lg-block">
        <div class="px-3 py-2">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-5">
                            <div class="fw-bold">
                                Account
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="fw-bold">
                                Account Type
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="fw-bold">
                                Balance
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    int rowIndex = 0;
    decimal netProfit = 0;
    @foreach (var item in ProfitAndLossReportItems)
    {
        var rowClass = rowIndex % 2 == 0 ? "alt-row" : "";
        netProfit += item.Balance;
        <div class="card mb-3 mb-lg-0 @rowClass">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-5 d-lg-none">
                                Account:
                            </div>
                            <div class="col-7 col-lg-5">
                                <div class="">
                                    @item.AccountName
                                </div>
                            </div>
                            <div class="col-5 d-lg-none">
                                Account Type:
                            </div>
                            <div class="col-7 col-lg-5">
                                <div class="">
                                    @item.AccountType
                                </div>
                            </div>
                            <div class="col-5 d-lg-none">
                                Balance:
                            </div>
                            <div class="col-7 col-lg-2">
                                <div class="">
                                    @item.Balance.ToString("C")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        rowIndex++;
    }
    <div class="card mb-3 mb-lg-0 fw-bold">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-5 d-lg-none">
                            Net Profit/Loss:
                        </div>
                        <div class="col-7 col-lg-10">
                            <div class="">
                                Net @(netProfit >= 0 ? "Profit" : "Loss")
                            </div>
                        </div>
                        <div class="col-5 d-lg-none">
                            Amount:
                        </div>
                        <div class="col-7 col-lg-2">
                            <div class="">
                                @netProfit.ToString("C")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
