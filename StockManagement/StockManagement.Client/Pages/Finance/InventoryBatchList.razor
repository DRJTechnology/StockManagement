@using StockManagement.Client.Components
@using StockManagement.Models.Enums
@page "/inventory"
@rendermode InteractiveWebAssembly
@inherits InventoryBatchListBase
<PageTitle>Inventory Batch Records</PageTitle>

<h3>Inventory Batch Records</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    @if (showActivityHistory)
    {
        <div class="modal-backdrop fade show"></div>
        <div class="modal d-block" tabindex="-1" style="background:rgba(0,0,0,0.2)">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Activity History</h5>
                        <button type="button" class="btn-close" aria-label="Close" @onclick="OnCancelHistory"></button>
                    </div>
                    <div class="modal-body">
                        <div class="d-none d-lg-block">
                            <div class="px-3 py-2">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="col-2">
                                                <div class="fw-bold">
                                                    Date
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="fw-bold">
                                                    Action
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="fw-bold">
                                                    Location
                                                </div>
                                            </div>
                                            <div class="col-1">
                                                <div class="fw-bold">
                                                    Quantity
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @{
                            int activityRowIndex = 0;
                        }
                        @foreach (var activity in InventoryBatchActivity)
                        {
                            var rowClass = activityRowIndex % 2 == 0 ? "alt-row" : "";
                            <div class="card mb-3 mb-lg-0 @rowClass">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-4 d-lg-none">
                                                    Date:
                                                </div>
                                                <div class="col-8 col-lg-2">
                                                    <div class="">
                                                        @activity.ActivityDate.ToString("dd MMM yyyy")
                                                    </div>
                                                </div>
                                                <div class="col-4 d-lg-none">
                                                    Action:
                                                </div>
                                                <div class="col-8 col-lg-4">
                                                    <div class="">
                                                        @activity.ActionName
                                                    </div>
                                                </div>
                                                <div class="col-4 d-lg-none">
                                                    Location:
                                                </div>
                                                <div class="col-8 col-lg-4">
                                                    <div class="">
                                                        @activity.LocationName
                                                    </div>
                                                </div>
                                                <div class="col-4 d-lg-none">
                                                    Quantity:
                                                </div>
                                                <div class="col-8 col-lg-1">
                                                    <div class="">
                                                        @activity.Quantity
                                                    </div>
                                                </div>
                                                <div class="col-12 col-lg-1">
                                                    @if (activity.StockSaleId > 0)
                                                    {
                                                        <button class="btn btn-link" title="Show Delivery Note" @onclick="() => OpenStockSale(activity.StockSaleId)">
                                                            <i class="bi bi-clipboard"></i>
                                                        </button>
                                                    }
                                                    else if (activity.StockOrderId > 0)
                                                    {
                                                        <button class="btn btn-link" title="Show Delivery Note" @onclick="() => OpenStockOrder(activity.StockOrderId)">
                                                            <i class="bi bi-box-seam"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            activityRowIndex++;
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card mb-3">
        <div class="card-header" style="cursor:pointer"
             @onclick="ToggleFilters">
            <strong>Filters</strong>
            <span class="float-end">
                <i class="bi @(filtersExpanded ? "bi-chevron-down" : "bi-chevron-right")"></i>
            </span>
        </div>
        @if (filtersExpanded)
        {
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4 col-md-6">
                        <div class="form-floating">
                            <InputSelect @bind-Value="inventoryBatchFilterModel.ProductTypeId" class="form-select">
                                <option value="">All</option>
                                @if (Lookups?.ProductTypeList != null)
                                {
                                    foreach (var pt in Lookups.ProductTypeList)
                                    {
                                        <option value="@pt.Id">@pt.ProductTypeName</option>
                                    }
                                }
                            </InputSelect>
                            <label for="productTypeFilter">Product Type:</label>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="form-floating">
                            <InputSelect @bind-Value="inventoryBatchFilterModel.ProductId" class="form-select">
                                <option value="">All</option>
                                @if (Lookups?.ProductList != null)
                                {
                                    foreach (var p in Lookups.ProductList)
                                    {
                                        <option value="@p.Id">@p.ProductName</option>
                                    }
                                }
                            </InputSelect>
                            <label for="productFilter">Product:</label>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="form-floating">
                            <InputSelect @bind-Value="inventoryBatchFilterModel.LocationId" class="form-select">
                                <option value="">All</option>
                                @if (Lookups?.LocationList != null)
                                {
                                    foreach (var v in Lookups.LocationList)
                                    {
                                        <option value="@v.Id">@v.Name</option>
                                    }
                                }
                            </InputSelect>
                            <label for="locationFilter">Location:</label>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="form-floating">
                            <InputDate @bind-Value="inventoryBatchFilterModel.PurchaseDate" class="form-control" />
                            <label for="dateFilter">Purchase Date:</label>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="form-floating">
                            <InputSelect class="form-select" @bind-Value="inventoryBatchFilterModel.Status">
                                <option value="0">-- Select Status --</option>
                                @foreach (var status in Enum.GetValues(typeof(InventoryBatchStatusEnum)))
                                {
                                    <option value="@(status)">@status</option>
                                }
                            </InputSelect>
                            <label>Status:</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col pt-2 text-end">
                        <button class="btn btn-sm btn-primary me-1" @onclick="OnFilter">Filter</button>
                        <button class="btn btn-sm btn-secondary" @onclick="OnReset" type="button">Reset</button>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="d-none d-lg-block">
        <div class="px-3 py-2">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-1">
                            <div class="fw-bold">
                                Type
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="fw-bold">
                                Product
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="fw-bold">
                                Location
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="fw-bold">
                                Purchase Date
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="fw-bold">
                                Initial Quantity
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="fw-bold">
                                Remaining Quantity
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="fw-bold">
                                Unit Cost
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="fw-bold">
                                Status
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="fw-bold">
                                Amend Date
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    int rowIndex = 0;
    @foreach (var inventoryItem in InventoryBatchList)
    {
        var rowClass = rowIndex % 2 == 0 ? "alt-row" : "";
        <div class="card mb-3 mb-lg-0 @rowClass">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-4 d-lg-none">
                                Type:
                            </div>
                            <div class="col-8 col-lg-1">
                                <div class="">
                                    @inventoryItem.ProductTypeName
                                </div>
                            </div>
                            <div class="col-4 d-lg-none">
                                Product:
                            </div>
                            <div class="col-8 col-lg-2">
                                <div class="">
                                    @inventoryItem.ProductName
                                </div>
                            </div>
                            <div class="col-4 d-lg-none">
                                Location:
                            </div>
                            <div class="col-8 col-lg-2">
                                <div class="">
                                    @inventoryItem.LocationName
                                </div>
                            </div>
                            <div class="col-4 d-lg-none">
                                Purchase Date:
                            </div>
                            <div class="col-8 col-lg-1">
                                <div class="">
                                    @inventoryItem.PurchaseDate.ToString("dd MMM yyyy")
                                </div>
                            </div>
                            <div class="col-4 d-lg-none">
                                Initial Quantity:
                            </div>
                            <div class="col-8 col-lg-1">
                                <div class="">
                                    @inventoryItem.InitialQuantity
                                </div>
                            </div>
                            <div class="col-4 d-lg-none">
                                Quantity Remaining:
                            </div>
                            <div class="col-8 col-lg-1">
                                <div class="">
                                    @inventoryItem.QuantityRemaining
                                </div>
                            </div>
                            <div class="col-4 d-lg-none">
                                Unit Cost:
                            </div>
                            <div class="col-8 col-lg-1">
                                <div class="">
                                    @inventoryItem.UnitCost.ToString("C")
                                </div>
                            </div>
                            <div class="col-4 d-lg-none">
                                Status:
                            </div>
                            <div class="col-8 col-lg-1">
                                <div class="">
                                    @inventoryItem.InventoryBatchStatus
                                </div>
                            </div>
                            <div class="col-4 d-lg-none">
                                Amend Date:
                            </div>
                            <div class="col-8 col-lg-1">
                                <div class="">
                                    @inventoryItem.AmendDate.ToString("dd MMM yyyy")
                                </div>
                            </div>
                            <div class="col-12 col-lg-1">
                                <button class="btn btn-link" title="Show activity history" @onclick="() => ShowHistory(inventoryItem.Id)">
                                    <i class="bi bi-clock-history"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        rowIndex++;
    }

    <Pagination CurrentPage="@inventoryBatchFilterModel.CurrentPage"
                TotalPages="@TotalPages"
                OnPageChanged="GoToPage" />
}
