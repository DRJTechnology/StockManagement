@page "/products"
@rendermode InteractiveWebAssembly
@inherits ProductsBase

<h3>Products</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="ShowAddForm">Add Product</button>

    @if (ShowForm)
    {
        <EditForm Model="EditProduct" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-2">
                <label>Name:</label>
                <InputText class="form-control" @bind-Value="EditProduct.ProductName" />
            </div>
            <button class="btn btn-success" type="submit">Save</button>
            <button class="btn btn-secondary ms-2" type="button" @onclick="CancelEdit">Cancel</button>
        </EditForm>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => Edit(product)">Edit</button>
                        <button class="btn btn-sm btn-danger ms-2" @onclick="() => Delete(product.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
