@using System.ComponentModel.DataAnnotations
@inherits LocationEditModalBase

@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal d-block" tabindex="-1" style="background:rgba(0,0,0,0.2)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@((EditLocation?.Id ?? 0) == 0 ? "Add Location" : "Edit Location")</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="OnCancel"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="EditLocation" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="mb-2">
                            <label>Name:</label>
                            <InputText class="form-control" @bind-Value="EditLocation.Name" autocomplete="off" />
                        </div>
                        <div class="mb-2">
                            <label>Default Customer:</label>
                            <InputSelect class="form-control" @bind-Value="EditLocation.ContactId">
                                <option value="0">-- Select Default Customer --</option>
                                @if (Customers != null)
                                {
                                    foreach (var customer in Customers)
                                    {
                                        <option value="@customer.Id">@customer.Name</option>
                                    }
                                }
                            </InputSelect>
                        </div>
                        <div class="mb-2">
                            <label>Notes:</label>
                            <InputTextArea class="form-control" @bind-Value="EditLocation.Notes" autocomplete="off" rows="5" />
                        </div>                        
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-success" type="submit">Save</button>
                            <button class="btn btn-secondary ms-2" type="button" @onclick="OnCancel">Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}
