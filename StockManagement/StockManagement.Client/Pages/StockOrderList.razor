@page "/stock-receipt-list"
@rendermode InteractiveWebAssembly
@inherits StockOrderListBase

<h3>Stock Orders</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="AddStockOrder">Add Stock Order</button>

    <div class="d-none d-md-block">
        <div class="px-3 py-2">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-md-3 col-lg-2">
                            <div class="fw-bold">
                                Date
                            </div>
                        </div>
                        <div class="col-md-5 col-lg-4">
                            <div class="fw-bold">
                                Supplier
                            </div>
                        </div>
                        <div class="col-md-2 col-lg-2">
                            <div class="fw-bold">
                                Paid
                            </div>
                        </div>
                        <div class="col-md-2 col-lg-2">
                            <div class="fw-bold">
                                Stock Recorded
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    int rowIndex = 0;
    @foreach (var stockOrder in StockOrders)
    {
        var rowClass = rowIndex % 2 == 0 ? "alt-row" : "";
        <div class="card mb-3 mb-lg-0 @rowClass">
            <div class="card-body py-2">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-4 d-md-none">
                                Date:
                            </div>
                            <div class="col-8 col-md-3 col-lg-2">
                                @stockOrder.Date.ToString("dd MMM yyyy")
                            </div>
                            <div class="col-4 d-md-none">
                                Supplier:
                            </div>
                            <div class="col-8 col-md-5 col-lg-4">
                                @stockOrder.ContactName
                            </div>
                            <div class="col-4 d-md-none">
                                Paid:
                            </div>
                            <div class="col-8 col-md-2 col-lg-2">
                                @(stockOrder.PaymentRecorded ? "Yes" : "No")
                            </div>
                            <div class="col-4 d-md-none">
                                Stock Recorded:
                            </div>
                            <div class="col-8 col-md-2 col-lg-2">
                                @(stockOrder.StockReceiptRecorded ? "Yes" : "No")
                            </div>
                            <div class="col-12 col-lg-2">
                                <button class="btn btn-sm btn-secondary" @onclick="() => ViewDetails(stockOrder)">Details</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        rowIndex++;
    }
}
