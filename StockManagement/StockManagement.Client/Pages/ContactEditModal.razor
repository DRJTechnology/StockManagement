@using System.ComponentModel.DataAnnotations
@using StockManagement.Models.Enums
@inherits ContactEditModalBase

@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal d-block" tabindex="-1" style="background:rgba(0,0,0,0.2)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@((EditContact?.Id ?? 0) == 0 ? "Add Contact" : "Edit Contact")</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="OnCancel"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="EditContact" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="mb-2">
                            <label>Name:</label>
                            <InputText class="form-control" @bind-Value="EditContact.Name" autocomplete="off" />
                        </div>
                        <div class="mb-2">
                            <label>Type:</label>
                            <InputSelect class="form-control" @bind-Value="EditContact.ContactTypeId">
                                <option value="0">-- Select Type --</option>
                                @foreach (var type in Enum.GetValues(typeof(ContactTypeEnum)))
                                {
                                    <option value="@((int)type)">@type</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="mb-2">
                            <label>Notes:</label>
                            <InputTextArea class="form-control" @bind-Value="EditContact.Notes" autocomplete="off" rows="5" />
                        </div>                        
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-success" type="submit">Save</button>
                            <button class="btn btn-secondary ms-2" type="button" @onclick="OnCancel">Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}
