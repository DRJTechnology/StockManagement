@using StockManagement.Client.Components
@page "/delivery-note/{DeliveryNoteId:int}"
@rendermode InteractiveWebAssembly
@inherits DeliveryNoteBase

<h3>Delivery Note</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <ConfirmDialogModal Show="@(ShowDeleteNoteConfirm || ShowDeleteDetailConfirm)"
                        ItemName="@SelectedItemName"
                        ConfirmationResult="HandleDeleteConfirmation" />

    <div class="row">
        <div class="col-md-6">
            <EditForm EditContext="editContext" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="mb-2">
                    <label>Date:</label>
                    <InputDate class="form-control" @bind-Value="EditDeliveryNote.Date" disabled="@( EditDeliveryNote.DeliveryCompleted )" />
                </div>
                <div class="mb-2">
                    <label>Location:</label>
                    <InputSelect class="form-control" @bind-Value="EditDeliveryNote.LocationId" disabled="@( EditDeliveryNote.DeliveryCompleted )">
                        <option value="0">-- Select Location --</option>
                        @if (Lookups?.LocationList != null)
                        {
                            foreach (var location in Lookups.LocationList.Where(l => l.Id != 1))
                            {
                                <option value="@location.Id">@location.Name</option>
                            }
                        }
                    </InputSelect>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-success" type="submit" disabled="@( !IsFormValid || !IsDirty || EditDeliveryNote.DeliveryCompleted )">Save</button>
                    @if (EditDeliveryNote.Id > 0)
                    {
                        <button class="btn btn-danger ms-2" type="button" @onclick="DeleteDeliveryNote" disabled="@( EditDeliveryNote.DeliveryCompleted )">Delete</button>
                    }
                </div>
            </EditForm>
        </div>
        <div class="col-md-6 d-none d-md-block border rounded p-2">
            <p>Products saved on a delivery note will be moved from the stock room to the selected location when the 'Complete Delivery' option is selected.</p>
            <p>Corresponding 'Activity' records will be created.</p>
        </div>
    </div>

    @if (EditDeliveryNote.Id > 0)
    {
        <div class="row">
            <div class="col d-flex justify-content-between pt-2">
                <button class="btn btn-primary mb-2" @onclick="ShowAddDetailForm" disabled="@( IsDirty || EditDeliveryNote.DeliveryCompleted )">Add Product</button>
                <div>
                    <button class="btn btn-success mb-2" @onclick="ConfirmDelivery" disabled="@( IsDirty || EditDeliveryNote.DeliveryCompleted || !DetailsExist )">Complete Delivery</button>
                    <button class="btn btn-primary mb-2" @onclick="DownloadDeliveryNotePdf" disabled="@( IsDirty || !DetailsExist )">Print Delivery Note</button>
                </div>
            </div>
        </div>

        <DeliveryNoteDetailEditModal Show="ShowEditDetailForm"
                                     EditDeliveryNoteDetail="EditDeliveryNoteDetail"
                                     Lookups="Lookups"
                                     OnCancel="CancelDetailEdit"
                                     OnValidSubmit="HandleValidDetailSubmit" />

        <div class="d-none d-md-block">
            <div class="px-3 py-2">
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-md-4 col-lg-3">
                                <div class="fw-bold">
                                    Product Type
                                </div>
                            </div>
                            <div class="col-md-5 col-lg-4">
                                <div class="fw-bold">
                                    Product
                                </div>
                            </div>
                            <div class="col-md-3 col-lg-5">
                                <div class="fw-bold">
                                    Quantity
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        int rowIndex = 0;
        @foreach (var deliveryNoteDetail in EditDeliveryNote.DetailList)
        {
            var rowClass = rowIndex % 2 == 0 ? "alt-row" : "";
            <div class="card mb-3 mb-lg-0 @rowClass">
                <div class="card-body py-2">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-4 d-md-none">
                                    Type:
                                </div>
                                <div class="col-8 col-md-4 col-lg-3">
                                    @deliveryNoteDetail.ProductTypeName
                                </div>
                                <div class="col-4 d-md-none">
                                    Product:
                                </div>
                                <div class="col-8 col-md-5 col-lg-4">
                                    @deliveryNoteDetail.ProductName
                                </div>
                                <div class="col-4 d-md-none">
                                    Quantity:
                                </div>
                                <div class="col-8 col-md-3 col-lg-2">
                                    @deliveryNoteDetail.Quantity
                                </div>
                                <div class="col-12 col-lg-3">
                                    <button class="btn btn-sm btn-warning" @onclick="() => EditDetail(deliveryNoteDetail)">Edit</button>
                                    <button class="btn btn-sm btn-danger ms-2" @onclick="() => DeleteDetail(deliveryNoteDetail.Id)">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            rowIndex++;
        }
    }

}
