@page "/delivery-note-list"
@rendermode InteractiveWebAssembly
@inherits DeliveryNoteListBase

<h3>Delivery Notes</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="AddDeliveryNote">Add Delivery Note</button>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Venue</th>
                <th>Direct Sale</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var note in DeliveryNotes)
            {
                <tr>
                    <td>@note.Date.ToShortDateString()</td>
                    <td>@note.VenueName</td>
                    <td>@(note.DirectSale ? "Yes" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-secondary" @onclick="() => ViewDetails(note)">Details</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
