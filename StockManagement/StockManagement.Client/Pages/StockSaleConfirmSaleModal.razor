@using System.ComponentModel.DataAnnotations
@inherits StockSaleConfirmSaleModalBase

@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal d-block" tabindex="-1" style="background:rgba(0,0,0,0.2)">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Sale</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="OnCancel"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex justify-content-end mb-3">
                        <div class="form-check form-switch mb-3">
                            <InputCheckbox class="form-check-input"
                            @bind-Value="SyncProductTypePrices"
                            id="syncProductTypePricesSwitch" />
                            <label class="form-check-label" for="syncProductTypePricesSwitch">
                                Sync Product Type Prices
                            </label>
                        </div>
                    </div>
                    <div class="d-none d-md-block">
                        <div class="px-3 py-2">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-2 col-lg-2">
                                            <div class="fw-bold">
                                                Type
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-lg-4">
                                            <div class="fw-bold">
                                                Product
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-lg-2">
                                            <div class="fw-bold">
                                                Quantity
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-lg-2 text-md-end">
                                            <div class="fw-bold">
                                                Unit Price
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-lg-2 text-md-end">
                                            <div class="fw-bold">
                                                Total
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @{int rowIndex = 0;}
                    @foreach (var stockReceiptDetail in StockSaleConfirmationObject.StockSaleDetails)
                    {
                        var rowClass = rowIndex % 2 == 0 ? "alt-row" : "";
                        <div class="card mb-3 mb-lg-0 @rowClass">
                            <div class="card-body py-2">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="row">
                                            <div class="col-4 d-md-none">
                                                Type:
                                            </div>
                                            <div class="col-8 col-md-2 col-lg-2">
                                                @stockReceiptDetail.ProductTypeName
                                            </div>
                                            <div class="col-4 d-md-none">
                                                Product:
                                            </div>
                                            <div class="col-8 col-md-3 col-lg-4">
                                                @stockReceiptDetail.ProductName
                                            </div>
                                            <div class="col-4 d-md-none">
                                                Quantity:
                                            </div>
                                            <div class="col-8 col-md-2 col-lg-2">
                                                @stockReceiptDetail.Quantity
                                            </div>
                                            <div class="col-4 d-md-none">
                                                Unit Price:
                                            </div>
                                            <div class="col-8 col-md-3 col-lg-2 text-md-end">
                                                <InputNumber class="form-control form-control-sm text-md-end"
                                                @bind-Value="stockReceiptDetail.UnitPrice"
                                                autocomplete="off"
                                                step="0.01"
                                                min="0"
                                                @oninput="(e) => OnUnitPriceInput(e, stockReceiptDetail)"/>
                                            </div>
                                            <div class="col-4 d-md-none">
                                                Total:
                                            </div>
                                            <div class="col-8 col-md-2 col-lg-2 text-md-end">
                                                @((stockReceiptDetail.Quantity * (stockReceiptDetail.UnitPrice ?? 0)).ToString("C"))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        rowIndex++;
                    }

                    <div class="card mb-3 mb-lg-0 ">
                        <div class="card-body py-2">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-4 d-md-none">
                                            Calculated Price:
                                        </div>
                                        <div class="col-8 offset-md-10 col-md-2 text-md-end">
                                            @CalculatedPrice.ToString("C")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer d-flex justify-content-evenly align-items-center">
                    <div class="d-flex justify-content-evenly align-items-center">
                        <div class="form-check form-switch mb-0">
                            <InputCheckbox class="form-check-input"
                            @bind-Value="ManualPriceOverride"
                            id="manualPriceOverride" />
                            <label class="form-check-label" for="manualPriceOverride">
                                Manual Price
                            </label>
                        </div>
                    </div>
                    <div class="fw-bold d-flex align-items-center mb-0">
                        <span class="me-2">Price:</span>
                        <InputNumber class="form-control form-control-sm w-50 "
                        @bind-Value="ManualTotalPurchasePrice"
                        autocomplete="off"
                        step="0.01"
                        min="0"
                        readonly="@(ManualPriceOverride ? null : "readonly")"/>
                    </div>
                    <button class="btn btn-primary mb-0" @onclick="ConfirmSale">Confirm Sale</button>
                </div>
            </div>
        </div>
    </div>
}
