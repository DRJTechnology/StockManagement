@using StockManagement.Client.Components
@page "/stock-receipt/{StockOrderId:int}"
@rendermode InteractiveWebAssembly
@inherits StockOrderBase

<h3>Stock Order</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <ConfirmDialogModal Show="@(ShowDeleteReceiptConfirm || ShowDeleteDetailConfirm)"
                        ItemName="@SelectedItemName"
                        ConfirmationResult="HandleDeleteConfirmation" />

    <div class="row">
        <div class="col-md-6">
            <EditForm EditContext="editContext" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="mb-2">
                    <label>Date:</label>
                    <InputDate class="form-control" @bind-Value="EditStockOrder.Date" />
                </div>
                <div class="mb-2">
                    <label>Supplier:</label>
                    <InputSelect class="form-control" @bind-Value="EditStockOrder.ContactId">
                        <option value="0">-- Select Supplier --</option>
                        @if (Lookups?.SupplierList != null)
                        {
                            foreach (var supplier in Lookups.SupplierList)
                            {
                                <option value="@supplier.Id">@supplier.Name</option>
                            }
                        }
                    </InputSelect>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-success" type="submit" disabled="@( !IsFormValid || !IsDirty )">Save</button>
                    @if (EditStockOrder.Id > 0)
                    {
                        <button class="btn btn-danger ms-2" type="button" @onclick="DeleteStockOrder">Delete</button>
                    }
                </div>
            </EditForm>
        </div>
        <div class="col-md-6 d-none d-md-block border rounded p-2">
            <p>Products saved with a stock order will be moved into stock.</p>
            <p>Corresponding 'Activity' records will be created.</p>
        </div>
    </div>

    @if (EditStockOrder.Id > 0)
    {
        <div class="row">
            <div class="col d-flex justify-content-between pt-2">
                <button class="btn btn-primary mb-2" @onclick="ShowAddDetailForm" disabled="@( IsDirty )">Add Product</button>
                <div>
                    <button class="btn btn-primary mb-2" @onclick="RecordPayment" disabled="@( IsDirty )">Record Payment</button>
                    <button class="btn btn-primary mb-2" @onclick="ReceiveStock" disabled="@( IsDirty )">Receive Stock</button>
                </div>
            </div>
        </div>

        <StockOrderDetailEditModal Show="ShowEditDetailForm"
                           EditStockOrderDetail="EditStockOrderDetail"
                           Lookups="Lookups"
                           OnCancel="CancelDetailEdit"
                           OnValidSubmit="HandleValidDetailSubmit" />

        <StockOrderRecordPaymentModal Show="ShowRecordPaymentForm"
                                      PaymentDetail="PaymentDetail"
                                      OnCancel="CancelRecordPayment"
                                      OnValidSubmit="HandleValidDetailSubmit"
                                      OnRecordPayment="HandleRecordPayment" />

        <div class="d-none d-md-block">
            <div class="px-3 py-2">
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-md-4 col-lg-3">
                                <div class="fw-bold">
                                    Product Type
                                </div>
                            </div>
                            <div class="col-md-5 col-lg-4">
                                <div class="fw-bold">
                                    Product
                                </div>
                            </div>
                            <div class="col-md-3 col-lg-5">
                                <div class="fw-bold">
                                    Quantity
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        int rowIndex = 0;
        @foreach (var stockReceiptDetail in EditStockOrder.DetailList)
        {
            var rowClass = rowIndex % 2 == 0 ? "alt-row" : "";
            <div class="card mb-3 mb-lg-0 @rowClass">
                <div class="card-body py-2">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-4 d-md-none">
                                    Type:
                                </div>
                                <div class="col-8 col-md-4 col-lg-3">
                                    @stockReceiptDetail.ProductTypeName
                                </div>
                                <div class="col-4 d-md-none">
                                    Product:
                                </div>
                                <div class="col-8 col-md-5 col-lg-4">
                                    @stockReceiptDetail.ProductName
                                </div>
                                <div class="col-4 d-md-none">
                                    Quantity:
                                </div>
                                <div class="col-8 col-md-3 col-lg-2">
                                    @stockReceiptDetail.Quantity
                                </div>
                                <div class="col-12 col-lg-3">
                                    <button class="btn btn-sm btn-warning" @onclick="() => EditDetail(stockReceiptDetail)">Edit</button>
                                    <button class="btn btn-sm btn-danger ms-2" @onclick="() => DeleteDetail(stockReceiptDetail.Id)">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            rowIndex++;
        }
    }

}
