@page "/venues"
@rendermode InteractiveWebAssembly
@inherits VenuesBase

<h3>Venues</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="ShowAddForm">Add Venue</button>

    @if (ShowForm)
    {
        <EditForm Model="EditVenue" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-2">
                <label>Name:</label>
                <InputText class="form-control" @bind-Value="EditVenue.VenueName" autocomplete="off" />
            </div>
            <button class="btn btn-success" type="submit">Save</button>
            <button class="btn btn-secondary ms-2" type="button" @onclick="CancelEdit">Cancel</button>
        </EditForm>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venue in Venues)
            {
                <tr>
                    <td>@venue.VenueName</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => Edit(venue)">Edit</button>
                        <button class="btn btn-sm btn-danger ms-2" @onclick="() => Delete(venue.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
