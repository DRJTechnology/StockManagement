@page "/venues"
@rendermode InteractiveWebAssembly
@inherits VenuesBase

<h3>Venues</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="ShowAddForm">Add Venue</button>

    <VenueEditModal Show="ShowForm"
    EditVenue="EditVenue"
    OnCancel="CancelEdit"
    OnValidSubmit="HandleValidSubmit" />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venue in Venues)
            {
                <tr>
                    <td>@venue.VenueName</td>
                    <td>
                        @if(venue.Id > 1)
                        {
                            <button class="btn btn-sm btn-warning" @onclick="() => Edit(venue)">Edit</button>
                            <button class="btn btn-sm btn-danger ms-2" @onclick="() => Delete(venue.Id)">Delete</button>                          
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
