@using StockManagement.Client.Components
@page "/locations"
@rendermode InteractiveWebAssembly
@inherits LocationsBase
<PageTitle>Locations</PageTitle>

<h3>Locations</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="ShowAddForm">Add Location</button>

    <LocationEditModal Show="ShowForm"
                    EditLocation="EditLocation"
                    Customers="Customers"
                    OnCancel="CancelEdit"
                    OnValidSubmit="HandleValidSubmit" />

    <ConfirmDialogModal Show="ShowDeleteConfirm"
                        ItemName="@SelectedItemName"
                        ConfirmationResult="HandleDeleteConfirmation" />

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var location in Locations)
                {
                    <tr>
                        <td style="width:1%;">@location.Name</td>
                                <td style="width:1%;">
                            @if (location.Id > 1)
                            {
                                <button class="btn btn-sm btn-secondary my-1" @onclick="() => ShowNotes(location)" disabled="@string.IsNullOrEmpty(location.Notes)">Show Notes</button>
                                <button class="btn btn-sm btn-warning my-1" @onclick="() => Edit(location)">Edit</button>
                                <button class="btn btn-sm btn-danger my-1" @onclick="() => Delete(location.Id)">Delete</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (ShowNotesPanel && SelectedLocation is not null)
{
    <div class="modal show d-block" tabindex="-1" style="background:rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Notes for @SelectedLocation.Name</h5>
                    <button type="button" class="btn-close" @onclick="CloseNotesPanel"></button>
                </div>
                <div class="modal-body">
                    @((MarkupString)SelectedLocation.Notes?.Replace("\n", "<br />"))
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseNotesPanel">Close</button>
                </div>
            </div>
        </div>
    </div>
}
