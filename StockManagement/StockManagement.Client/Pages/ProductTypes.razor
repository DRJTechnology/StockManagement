@using StockManagement.Client.Components
@page "/producttypes"
@rendermode InteractiveWebAssembly
@inherits ProductTypesBase
<PageTitle>Product Types</PageTitle>

<h3>Product Types</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="ShowAddForm">Add Product Type</button>

    <ProductTypeEditModal Show="ShowForm"
                          EditProductType="EditProductType"
                          OnCancel="CancelEdit"
                          OnValidSubmit="HandleValidSubmit" />

    <ConfirmDialogModal Show="ShowDeleteConfirm"
                        ItemName="@SelectedItemName"
                        ConfirmationResult="HandleDeleteConfirmation" />

    <div class="d-none d-lg-block">
        <div class="px-3 py-2">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-5">
                            <div class="fw-bold">
                                Name
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="fw-bold">
                                Cost Price
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="fw-bold">
                                Sale Price
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    int rowIndex = 0;
    @foreach (var productType in ProductTypes)
    {
        var rowClass = rowIndex % 2 == 0 ? "alt-row" : "";
        <div class="card mb-3 mb-lg-0 @rowClass">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-5 d-lg-none">
                                Name:
                            </div>
                            <div class="col-7 col-lg-5">
                                <div class="">
                                    @productType.ProductTypeName
                                </div>
                            </div>
                            <div class="col-5 d-lg-none">
                                Default Cost Price:
                            </div>
                            <div class="col-7 col-lg-2">
                                <div class="">
                                    @productType.DefaultCostPrice.ToString("C")
                                </div>
                            </div>
                            <div class="col-5 d-lg-none">
                                Default Sale Price:
                            </div>
                            <div class="col-7 col-lg-2">
                                <div class="">
                                    @productType.DefaultSalePrice.ToString("C")
                                </div>
                            </div>
                            <div class="col-12 col-lg-3">
                                <button class="btn btn-sm btn-warning" @onclick="() => Edit(productType)">Edit</button>
                                <button class="btn btn-sm btn-danger ms-2" @onclick="() => Delete(productType.Id)">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        rowIndex++;
    }

