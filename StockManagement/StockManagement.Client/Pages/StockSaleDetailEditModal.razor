@using System.ComponentModel.DataAnnotations
@inherits StockSaleDetailEditModalBase

@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal d-block" tabindex="-1" style="background:rgba(0,0,0,0.2)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@((EditStockSaleDetail?.Id ?? 0) == 0 ? "Add Product" : "Edit Product")</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="OnCancel"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="EditStockSaleDetail" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="mb-2">
                            <label>Product Type:</label>
                            <InputSelect class="form-control" @bind-Value="ProductTypeId" TValue="int">
                                <option value="0">-- Select Product Type --</option>
                                @if (Lookups?.ProductTypeList != null)
                                {
                                    foreach (var type in Lookups.ProductTypeList)
                                    {
                                        <option value="@type.Id">@type.ProductTypeName</option>
                                    }
                                }
                            </InputSelect>
                        </div>
                        <div class="mb-2">
                            <label>Product:</label>
                            <InputSelect class="form-control" @bind-Value="ProductId" TValue="int">
                                <option value="0">-- Select Product --</option>
                                @if (Lookups?.ProductList != null)
                                {
                                    foreach (var product in Lookups.ProductList)
                                    {
                                        <option value="@product.Id">@product.ProductName</option>
                                    }
                                }
                            </InputSelect>
                        </div>
                        <div class="mb-2">
                            <label>Quantity:</label>
                            <InputNumber class="form-control" @bind-Value="EditStockSaleDetail.Quantity" />
                        </div>
                        @if (EditStockSaleDetail.ProductTypeId > 0 && EditStockSaleDetail.ProductId > 0 && availableQuantity == 0)
                        {
                            <div class="text-danger">
                                No stock available in @LocationName
                            </div>
                        }
                        else if (availableQuantity > 0 && availableQuantity < EditStockSaleDetail.Quantity)
                        {
                            <div class="text-danger">
                                Only @availableQuantity available in @LocationName
                            </div>
                        }
                        else if (availableQuantity > 0)
                        {
                            <div class="text-muted">
                                @availableQuantity available in @LocationName
                            </div>
                        }
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-success" type="submit" disabled="@(availableQuantity == 0 || availableQuantity < EditStockSaleDetail.Quantity)">Save</button>
                            <button class="btn btn-secondary ms-2" type="button" @onclick="OnCancel">Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}
