@using System.ComponentModel.DataAnnotations
@inherits StockOrderRecordPaymentModalBase

@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal d-block" tabindex="-1" style="background:rgba(0,0,0,0.2)">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Record Payment</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="OnCancel"></button>
                </div>
                <div class="modal-body">
                    <div class="d-none d-md-block">
                        <div class="px-3 py-2">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-md-4 col-lg-2">
                                            <div class="fw-bold">
                                                Type
                                            </div>
                                        </div>
                                        <div class="col-md-5 col-lg-4">
                                            <div class="fw-bold">
                                                Product
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-lg-2">
                                            <div class="fw-bold">
                                                Quantity
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-lg-2 text-md-end">
                                            <div class="fw-bold">
                                                Unit Cost
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-lg-2 text-md-end">
                                            <div class="fw-bold">
                                                Total
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @{int rowIndex = 0;}
                    @foreach (var stockReceiptDetail in PaymentDetail.StockOrderDetailPayments)
                    {
                        var rowClass = rowIndex % 2 == 0 ? "alt-row" : "";
                        <div class="card mb-3 mb-lg-0 @rowClass">
                            <div class="card-body py-2">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="row">
                                            <div class="col-4 d-md-none">
                                                Type:
                                            </div>
                                            <div class="col-8 col-md-2 col-lg-2">
                                                @stockReceiptDetail.ProductTypeName
                                            </div>
                                            <div class="col-4 d-md-none">
                                                Product:
                                            </div>
                                            <div class="col-8 col-md-4 col-lg-4">
                                                @stockReceiptDetail.ProductName
                                            </div>
                                            <div class="col-4 d-md-none">
                                                Quantity:
                                            </div>
                                            <div class="col-8 col-md-2 col-lg-2">
                                                @stockReceiptDetail.Quantity
                                            </div>
                                            <div class="col-4 d-md-none">
                                                Unit Cost:
                                            </div>
                                            <div class="col-8 col-md-2 col-lg-2 text-md-end">
                                                @($"{stockReceiptDetail.UnitPrice:C4}")
                                            </div>
                                            <div class="col-4 d-md-none">
                                                Total:
                                            </div>
                                            <div class="col-8 col-md-2 col-lg-2 text-md-end">
                                                @stockReceiptDetail.Total.ToString("C")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        rowIndex++;
                    }

                </div>
                <div class="modal-footer d-flex justify-content-evenly align-items-center">
                    <div class="d-flex align-items-center justify-content-between">
                        <label class="me-2">Date:</label>
                        <InputDate class="form-control" @bind-Value="PaymentDetail.PaymentDate" />
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <label class="me-2">Total Price:</label>
                            <InputNumber class="form-control w-50"
                                         @bind-Value="TotalPurchasePrice"
                                         autocomplete="off"
                                         step="0.01"
                                         min="0" />
                        </div>
                        <div class="fw-bold">
                            Calculated Total
                            @CalculatedTotal.ToString("C")
                        </div>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-evenly align-items-center">
                    <button class="btn btn-primary mb-2" @onclick="CalculatePricing" disabled="@(TotalPurchasePrice==0)">Calculate Pricing</button>
                    <button class="btn btn-primary mb-2" @onclick="OnRecordPayment" disabled="@(DisableRecordPayment())">Record Payment</button>
                </div>
            </div>
        </div>
    </div>
}
