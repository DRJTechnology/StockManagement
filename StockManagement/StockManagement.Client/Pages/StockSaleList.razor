@page "/stock-sale-list"
@rendermode InteractiveWebAssembly
@inherits StockSaleListBase
<PageTitle>Stock Sales</PageTitle>

<h3>Stock Sales</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="AddStockSale">Add Stock Sale</button>

    <div class="d-none d-md-block">
        <div class="px-3 py-2">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-md-2 col-lg-2">
                            <div class="fw-bold">
                                Date
                            </div>
                        </div>
                        <div class="col-md-4 col-lg-4">
                            <div class="fw-bold">
                                Location
                            </div>
                        </div>
                        <div class="col-md-2 col-lg-2">
                            <div class="fw-bold">
                                Confirmed
                            </div>
                        </div>
                        <div class="col-md-2 col-lg-2">
                            <div class="fw-bold">
                                Paid
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    int rowIndex = 0;
    @foreach (var sale in StockSales)
    {
        var rowClass = rowIndex % 2 == 0 ? "alt-row" : "";
        <div class="card mb-3 mb-lg-0 @rowClass">
            <div class="card-body py-2">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-4 d-md-none">
                                Date:
                            </div>
                            <div class="col-8 col-md-2 col-lg-2">
                                @sale.Date.ToString("dd MMM yyyy")
                            </div>
                            <div class="col-4 d-md-none">
                                Location:
                            </div>
                            <div class="col-8 col-md-4 col-lg-4">
                                @sale.LocationName
                            </div>
                            <div class="col-4 d-md-none">
                                Confirmed:
                            </div>
                            <div class="col-8 col-md-2 col-lg-2">
                                @if (sale.SaleConfirmed)
                                {
                                    <span class="px-1">Yes</span>
                                }
                                else
                                {
                                    <span class="bg-danger text-white px-2 py-1 rounded">No</span>
                                }
                            </div>
                            <div class="col-4 d-md-none">
                                Paid:
                            </div>
                            <div class="col-8 col-md-2 col-lg-2">
                                @if (sale.PaymentReceived)
                                {
                                    <span class="px-1">Yes</span>
                                }
                                else
                                {
                                    <span class="bg-danger text-white px-2 py-1 rounded">No</span>
                                }
                            </div>
                            <div class="col-12 col-md-2 col-lg-2">
                                <button class="btn btn-sm btn-secondary" @onclick="() => ViewDetails(sale)">Details</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        rowIndex++;
    }
}
