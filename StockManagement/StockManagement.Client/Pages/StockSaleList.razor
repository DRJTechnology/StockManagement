@page "/stock-sale-list"
@rendermode InteractiveWebAssembly
@inherits StockSaleListBase

<h3>Delivery Notes</h3>

@if (IsLoading)
{
    <p>Loading...</p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="AddStockSale">Add Delivery Note</button>

    <div class="d-none d-md-block">
        <div class="px-3 py-2">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-md-4 col-lg-3">
                            <div class="fw-bold">
                                Date
                            </div>
                        </div>
                        <div class="col-md-5 col-lg-4">
                            <div class="fw-bold">
                                Location
                            </div>
                        </div>
                        <div class="col-md-3 col-lg-5">
                            <div class="fw-bold">
                                Direct Sale
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    int rowIndex = 0;
    @foreach (var note in StockSales)
    {
        var rowClass = rowIndex % 2 == 0 ? "alt-row" : "";
        <div class="card mb-3 mb-lg-0 @rowClass">
            <div class="card-body py-2">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-4 d-md-none">
                                Date:
                            </div>
                            <div class="col-8 col-md-4 col-lg-3">
                                @note.Date.ToString("dd MMM yyyy")
                            </div>
                            <div class="col-4 d-md-none">
                                Location:
                            </div>
                            <div class="col-8 col-md-5 col-lg-4">
                                @note.LocationName
                            </div>
                            <div class="col-4 d-md-none">
                                Direct Sale:
                            </div>
                            <div class="col-8 col-md-3 col-lg-2">
                                @(note.DirectSale ? "Yes" : "No")
                            </div>
                            <div class="col-12 col-lg-3">
                                <button class="btn btn-sm btn-secondary" @onclick="() => ViewDetails(note)">Details</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        rowIndex++;
    }
}
