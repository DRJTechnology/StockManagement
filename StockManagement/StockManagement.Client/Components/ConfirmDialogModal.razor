@inherits ConfirmDialogModalBase

@if (Show)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="OnCancelClicked" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>@Message</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="OnCancelClicked">Cancel</button>
                    <button class="btn btn-danger" @onclick="OnConfirmClicked">Confirm</button>
                </div>
            </div>
        </div>
    </div>
}


