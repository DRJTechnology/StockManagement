@inherits AccountEditModalBase

@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal d-block" tabindex="-1" style="background:rgba(0,0,0,0.2)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@((EditAccount?.Id ?? 0) == 0 ? "Add Account" : "Edit Account")</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="OnCancel"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="EditAccount" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="mb-2">
                            <label>Account:</label>
                            <InputText class="form-control" @bind-Value="EditAccount.Name" />
                        </div>
                        <div class="mb-2">
                            <label>Type:</label>
                            <InputSelect class="form-control" @bind-Value="EditAccount.AccountTypeId">
                                <option value="">-- Select Type --</option>
                                @if (AccountTypes != null)
                                {
                                    foreach (var accountType in AccountTypes)
                                    {
                                        <option value="@accountType.Id">@accountType.Type</option>
                                    }
                                }
                            </InputSelect>
                        </div>
                        <div class="mb-2 form-check">
                            <InputCheckbox class="form-check-input" @bind-Value="EditAccount.Active" id="activeCheckbox" />
                            <label class="form-check-label" for="activeCheckbox">Active</label>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-success" type="submit">Save</button>
                            <button class="btn btn-secondary ms-2" type="button" @onclick="OnCancel">Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}


